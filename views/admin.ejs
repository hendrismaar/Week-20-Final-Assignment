<%- include('partials/header') %>   
    <link rel="stylesheet" href="css/style.css">
    <title>Admin</title>
</head>
<body>
<%- include('partials/navbar') %>
<a href="/logout">Log out</a>


<div class="admin-container">
    <div id="info-form">
        <h1>Personal Information</h1>
        <form action="/admin" method="POST" enctype="multipart/form-data">
            <h4>Personal info</h4>
            <input type="text" name="userInfo" placeholder="Add some info" >
            <h4>School and graduation year</h4>
            <input type="text" name="userEduSchool" placeholder="Add a school">
            <input type="text" name="userEduYear" placeholder="Add the graduation year">
            <h4>Technical skills</h4>
            <input type="text" name="userTech" placeholder="Add a technical skill">
            <h4>Soft skills</h4>
            <input type="text" name="userSoft" placeholder="Add a soft skill">
            <h4>Images</h4>
            <input type="file" name="userFile" placeholder="Add an image">
            <p></p>
            <button type="submit">Add the info</button>
        </form>
    </div>  
</div>
<div class="display-info">
    <main>
        <ul>
            <li><h2>Personal information</h2></li>
            <% for(let i = 0; i < displayInfo.length; i ++) { %>
                <li><%= displayInfo[i].infoContent %></li>
            <% } %>      
        </ul>
    </main> 

    <div id="education">
        <ul>
            <li>
                <h2>Education</h2>
                <table>
                    <tr>
                        <th>School</th>
                        <th>Year of graduation</th>
                    </tr>
                    <% for(let i = 0; i < displayInfo.length; i ++) { %>
                        <tr>
                            <td><%= displayInfo[i].eduSchoolContent %></td>
                            <td><%= displayInfo[i].eduYearContent %></td>
                        </tr>
                    <% } %> 
            </table>
            </li>
        </ul>
        
    </div>

    <div id="technical">
        <ul>
            <li><h2>Technical skills</h2></li>
            <% for(let i = 0; i < displayInfo.length; i ++) { %>
                <li><%= displayInfo[i].techContent %></li>
            <% } %> 
        </ul>
    </div>

    <div id="soft">
        
        <ul>
            <li><h2>Soft skills</h2></li>
            <% for(let i = 0; i < displayInfo.length; i ++) { %>
                <li><%= displayInfo[i].softContent %></li>
            <% } %> 
        </ul>
    </div>

    <div id="img">
        <ul>
            <li><h2>Images</h2></li>
        <% for(let i = 0; i < displayInfo.length; i ++) { %>
            <li>
                <img src="<%= displayInfo[i].imageUrl %>" alt=""> 
            </li>
        <% } %> 
        </ul>
    </div>
</div>
  
<%- include('partials/footer') %>